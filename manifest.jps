{
	"jpsVersion": "0.99",
	"jpsType": "update",
	"id": "java-vertical-scaling",
	"name": "Java Memory Vertical Scaling",
	"categories": [
		"apps/dev-and-admin-tools"
	],
	"version": "1.1",
	"homepage": "https://github.com/jelastic-jps/java-memory-agent/",
	"description": {
		"text": "Java Memory Vertical Scaling",
		"short": "Java Memory Vertical Scaling"
	},
	"globals": {
		"baseUrl": "https://raw.githubusercontent.com/jelastic-jps/java-memory-agent/master/scripts",
		"homeDir": "/java_agent"
	},
	"onInstall": {
		"cmd[cp]": [
			"mkdir -p ${globals.homeDir}",
			"wget ${globals.baseUrl}/supervisor.sh? -xO ${globals.homeDir}/java",
			"wget ${globals.baseUrl}/memoryConfig.sh? -xO ${globals.homeDir}/memoryConfig.sh",
			"wget ${globals.baseUrl}/../lib/jelastic-gc-agent.jar -xO ${globals.homeDir}/jelastic-gc-agent.jar",
			"/bin/bash /java --install &>> /var/log/run.log"
		]
	},
	"onUninstall": {
		"cmd[cp]": [
			"/bin/bash /java --uninstall &>> /var/log/run.log"
		]
	},
	"success": {
		"text": "Done!"
	}
}
